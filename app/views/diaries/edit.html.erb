<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h1>日記編集画面</h1>
  	<%= form_with model:@diary, local:true do |f| %>
   <% if @diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= @diary.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group has-icon">

       <div class="col-sm-6">
        <label class="control-label" for="">記録日</label>
  　      <%= f.date_select :date, {}, class: 'form-control' %>
       </div>

       <div class="col-sm-6">
        <label class="control-label" for="">記録体重</label>
  　      <%= f.number_field :weight, class: 'form-control', step: "0.01" %>kg</div>

        <label class="control-label sr-only">タイトル</label>
        <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :text, class:"form-control", rows:"3", placeholder:"本文" %>
    </div>
  </div>
  <div class="row">
   <div class="col-sm-12">
     <%= f.attachment_field :image %>
   </div>
  </div>
  <hr>
  <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
 <% end %>

		<%= link_to 'Back', diaries_path, class: "back" %>
    </div>
    <div class='col-md-3'></div>
</div>